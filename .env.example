APP_NAME="ESSU HRMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

# Papertrail Logging (Optional)
# PAPERTRAIL_URL=
# PAPERTRAIL_PORT=

# Slack Logging (Optional)
# LOG_SLACK_WEBHOOK_URL=
# LOG_SLACK_USERNAME="Laravel Log"
# LOG_SLACK_EMOJI=":boom:"

# Database Configuration
# SQLite (Default for local development)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_FOREIGN_KEYS=true

# MySQL/MariaDB (Uncomment and configure for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL (Alternative database option)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Database URL (Alternative connection method)
# DB_URL=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_STORE=file
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=database
# QUEUE_CONNECTION=sync (for synchronous processing)

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_REPLY_TO_ADDRESS=null
MAIL_REPLY_TO_NAME=null

# Mail SMTP Configuration (Alternative)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

# AWS SES Mail (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# MAIL_MAILER=ses

# Postmark Mail (Optional)
# MAIL_MAILER=postmark
# POSTMARK_TOKEN=

# Resend Mail (Optional)
# MAIL_MAILER=resend
# RESEND_KEY=

# Laravel Passport OAuth Configuration
# These keys are generated automatically via: php artisan passport:keys
# For production, you may want to set these as environment variables
# PASSPORT_PRIVATE_KEY=
# PASSPORT_PUBLIC_KEY=
# PASSPORT_CONNECTION=

# Broadcasting (Optional)
# BROADCAST_CONNECTION=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# AWS S3 Configuration (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"